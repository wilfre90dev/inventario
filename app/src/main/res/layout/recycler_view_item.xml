<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btnLlamar"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:onClick="Llamar"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/llamar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="5dp">

      <TextView
          android:id="@+id/tvLinea"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="@tools:sample/lorem[2]" />

      <TextView
          android:id="@+id/tvLinea7"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingRight="10dp"
          tools:text="@tools:sample/lorem[1]" />

      <TextView
          android:id="@+id/tvLinea1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingRight="10dp"
          tools:text="@tools:sample/lorem[1]" />

      <TextView
          android:id="@+id/tvLinea2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="gravity"
          tools:text="@tools:sample/lorem[1]" />

      <TextView
          android:id="@+id/tvLinea3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingRight="10dp"
          tools:text="@tools:sample/lorem[1]" />

      <TextView
          android:id="@+id/tvLinea4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="gravity"
          tools:text="@tools:sample/lorem[1]" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLinea5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@tools:sample/lorem[2]" />

        <TextView
            android:id="@+id/tvLinea6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@tools:sample/lorem[2]" />
      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>